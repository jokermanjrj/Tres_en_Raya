        android:textSize="30sp"/>


    <Button
        android:id="@+id/boton"
        android:layout_width="335dp"
        android:layout_height="94dp"
        android:layout_marginStart="380dp"
        android:layout_marginLeft="380dp"
        android:layout_marginTop="156dp"
