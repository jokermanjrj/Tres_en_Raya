        android:text="Desarrolladores:"
        android:textSize="30sp"
        app:fontFamily="@font/almendra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
