        android:text="Rubén"
        android:textSize="30sp"
        app:fontFamily="@font/almendra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="73dp"
